@model Bahrin.Harbour.Model.AccountModel.SignInModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Areas/Administration/Views/Shared/_LayoutAccount.cshtml";
}

<div class="wrapper">
    <main class="authentication-content d-flex">

        <div class="container">
            <div class="text-center mt-4">
                <div class="mb-lg-5 mb-4">
                    <a href="index.html" class="">
                        <img src="assets/images/brand-logo-2.svg" alt="" height="55" class="auth-logo logo-dark mx-auto">
                    </a>
                </div>
            </div>
            <div class="row justify-content-center align-items-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card">
                        <div class="card-body">

                            <div class="py-5">
                                <h4 class="text-dark mt-2 text-center card-title mb-3">Password Reset Successfully!</h4>
                                <p class="text-muted text-center mb-lg-5 mb-4">Your Password has been reset Successfully! You can now Sign in with the new password.</p>
                                <!--<div class="alert alert-primary" role="alert">
                                    Enter your Email and instructions will be sent to you!
                                </div>-->

                                <form class="form-horizontal" action="#">

                                    <div class="mb-3 row mt-5">
                                        <div class="col-12 text-end">
                                            <a href="/" class="btn login-btn w-100 text-white">Back to Sign in</a>
                                        </div>
                                    </div>
                                    <!-- end row -->


                                </form>

                            </div>
                        </div>
                        <!-- end cardbody -->
                    </div>


                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>

    </main>
    <!--end page main-->
</div>
<!--end wrapper-->
<!--plugins-->
<script src="~/js/jquery.min.js"></script>
<script src="~/js/pace.min.js"></script>
<script src="~/js/site.js"></script>