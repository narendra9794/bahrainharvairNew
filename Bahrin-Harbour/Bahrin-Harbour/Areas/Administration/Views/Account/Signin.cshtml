@model Bahrin.Harbour.Model.AccountModel.SignInModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Areas/Administration/Views/Shared/_LayoutAccount.cshtml";
}

<!--start wrapper-->
<div class="wrapper">
    <main class="authentication-content d-flex">
        <div class="container">
            <div class="authentication-card ">
                <div class="card shadow rounded-16 overflow-hidden w-100  p-3 pt-3 mt-3">
                    <div class="row">
                        <div class="col-lg-6 align-items-center justify-content-center ">
                            <div class="row">
                                <div class="col-lg-6 col-6 mb-3">
                                    <img src="~/images/login1.png" alt="login-img" class="img-fluid">
                                </div>
                                <div class="col-lg-6 col-6 mb-3">
                                    <img src="~/images/login2.png" alt="login-img" class="img-fluid">
                                </div>
                                <div class="col-lg-6 col-6 mb-3">
                                    <img src="~/images/login3.png" alt="login-img" class="img-fluid">
                                </div>
                                <div class="col-lg-6 col-6 mb-3">
                                    <img src="~/images/login4.png" alt="login-img" class="img-fluid">
                                </div>
                                <div class="col-lg-6 col-6 mb-3">
                                    <img src="~/images/login5.png" alt="login-img" class="img-fluid d-none d-lg-block">
                                </div>
                                <div class="col-lg-6 col-6 mb-3">
                                    <img src="~/images/login6.png" alt="login-img" class="img-fluid d-none d-lg-block">
                                </div>
                            </div>
                            <!--<div class="login-bg">
                                <p class="align-text-bottom1 text-white">Building a sustainable future, together</p>
                            </div>-->
                        </div>
                        <div class="col-lg-6  align-items-center">
                            <div class="card-body pe-4 pe-sm-5">
                                <img src="~/images/brand-logo-2.svg" class="logo-icon mb-lg-5 mb-4" alt="logo icon" width="140">
                                <div class="pt-lg-5 pt-2">

                                    <h3 class="card-title mb-3">Login to your account</h3>
                                </div>
                                <form class="form-body pt-2" asp-action="Signin" asp-controller="Account" method="post">
                                    <div class="row g-3">
                                        <div class="col-12">
                                            <div class="ms-auto position-relative">
                                                <label class="form-label">Email</label>
                                                <input type="email" asp-for="email" class="form-control radius-4 height-50" id="inputEmailAddress" required>
                                                <div asp-validation-for="email"  class="valid-feedback">Valid.</div>
                                                <div asp-validation-for="email" class="invalid-feedback">Please fill out this field.</div>
                                            </div>
                                        </div>
                                        <div class="ms-auto position-relative">
                                            <label class="form-label">Password</label>
                                            <input type="password" asp-for="password" class="form-control radius-4 height-50" id="inputChoosePassword" required>
                                            <div asp-validation-for="password" class="valid-feedback">Valid.</div>
                                            <div asp-validation-for="password" class="invalid-feedback">Please fill out this field.</div>
                                        </div>
                                    </div>
                                    <div class="row mt-4">
                                        <div class="col-6">
                                            <div class="form-check">
                                                <input class="form-check-input" asp-for="rememberMe" type="checkbox" id="flexSwitchCheckChecked">
                                                <label class="form-check-label" for="flexSwitchCheckChecked">Remember Me</label>
                                            </div>
                                        </div>
                                        <div class="col-6 text-end">
                                            <a asp-action="ForgetPassword" class="text-dark">Forgot Password ?</a>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-4 mb-3">
                                        <div class="d-grid">
                                            <input type="submit" value="Sign In" class="btn login-btn height-50 text-white" />
                                        </div>
                                    </div>
                                    <!--<div class="col-12 text-center">
                                        <p class="mb-0">Don’t have an account ? <a href="sign-up.php" class="text-dark">Sign up here</a></p>
                                    </div>-->
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!--end page main-->
</div>
<!--end wrapper-->
<!--plugins-->
<script src="~/js/jquery.min.js"></script>
<script src="~/js/pace.min.js"></script>
<script src="~/js/site.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            var errorMessage = '@TempData["Error"]';
            var successMessage = '@TempData["Success"]';

            if (errorMessage) {
                toastr.error(errorMessage);
            }

            if (successMessage) {
                toastr.success(successMessage);
            }
        });
    </script>


