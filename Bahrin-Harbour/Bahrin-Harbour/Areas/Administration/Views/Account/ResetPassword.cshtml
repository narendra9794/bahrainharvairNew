@model Bahrin.Harbour.Model.AccountModel.ResetPasswordModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Areas/Administration/Views/Shared/_LayoutAccount.cshtml";
}


    <!--start wrapper-->
    <div class="wrapper">
        <main class="authentication-content d-flex">

            <div class="container">
                <div class="text-center mt-4">
                    <div class="mb-lg-5 mb-4">
                        <a href="index.html" class="">
                            <img src="~/images/brand-logo-2.svg" alt="" height="55" class="auth-logo logo-dark mx-auto">
                        </a>
                    </div>
                </div>
                <div class="row justify-content-center align-items-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card">
                            <div class="card-body">

                                <div class="p-3">
                                    <h4 class="text-dark mt-2 text-center card-title mb-3">Forgot Password?</h4>
                                    <p class="text-muted text-center mb-lg-5 mb-4">Please enter your registered email address, We will send you a link to reset your password</p>
                                    <!--<div class="alert alert-primary" role="alert">
                                        Enter your Email and instructions will be sent to you!
                                    </div>-->

                                    <form class="form-horizontal" asp-area="Administration" asp-controller="Account" asp-action="ResetPassword" method="post">

                                        <input asp-for="UserId" hidden />
                                        <input asp-for="Token" hidden />

                                        <div class="mb-3">
                                            <label  for="newpassword" class="mb-2">New Password</label>
                                            <input asp-for="NewPassword" type="password" class="form-control" id="newpassword" required>
                                            <div asp-validation-for="NewPassword" class="valid-feedback">Valid.</div>
                                            <div asp-validation-for="NewPassword" class="invalid-feedback">Please fill out this field.</div>
                                        </div>

                                        <div class="mb-3">
                                            <label for="confirm_password" class="mb-2">Confirm Password</label>
                                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirm_password" required com>
                                            <div asp-validation-for="ConfirmPassword" class="valid-feedback">Valid.</div>
                                            <div asp-validation-for="ConfirmPassword" class="invalid-feedback">Please fill out this field.</div>
                                        </div>

                                        <div class="mb-3 row mt-5">
                                            <div class="col-12 text-end">
                                                <input type="submit" value="Reset Password" class="btn login-btn w-100 text-white" />
                                            </div>
                                        </div>
                                        <!-- end row -->


                                    </form>

                                </div>
                            </div>
                            <!-- end cardbody -->
                        </div>


                    </div>
                    <!-- end col -->
                </div>
                <!-- end row -->
            </div>

        </main>
        <!--end page main-->
    </div>
    <!--end wrapper-->



<script src="~/js/jquery.min.js"></script>
<script src="~/js/pace.min.js"></script>
<script src="~/js/site.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        var errorMessage = '@TempData["Error"]';
        var successMessage = '@TempData["Success"]';

        if (errorMessage) {
            toastr.error(errorMessage);
        }

        if (successMessage) {
            toastr.success(successMessage);
        }
    });
</script>
<script>
    function validateForm() {
        var email = document.getElementById('inputEmailAddress').value;
        var password = document.getElementById('inputChoosePassword').value;

        if (email !== password) {
            alert("Email and password do not match!");
            return false; // Prevent form submission
        }
        return true; // Allow form submission
    }
</script>