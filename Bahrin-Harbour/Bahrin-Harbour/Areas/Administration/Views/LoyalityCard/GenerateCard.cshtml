<div class="modal fade" id="generateCardModal" tabindex="-1" aria-labelledby="generateCardModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="generateCardModalLabel">Generate Card</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Dropdown inside the modal -->
        <div class="form-group">
          <label for="cardType">Select Card Type</label>
          <select class="form-control" id="cardType">
            <option value="vip">VIP Card</option>
            <option value="premium">Premium Card</option>
            <option value="basic">Basic Card</option>
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Generate</button>
      </div>
    </div>
  </div>
</div>

